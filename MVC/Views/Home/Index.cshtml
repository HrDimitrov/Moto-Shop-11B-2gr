@model IEnumerable<MVC.Models.Product>

@{
	ViewData["Title"] = "Home Page";
}

	<div class="container my-5">
	<h1 class="text-center mb-4 fw-bold">Welcome to MotoMech Store!</h1>
	<p class="text-center mb-4">Discover our wide range of products and find the best deals.</p>
		<div class="row g-4">	
			@foreach (var product in Model)
			{
				<div class="col-sm-6 col-md-4 col-lg-3">
					<div class="card shadow-sm border-0 h-100">
						<img src="@product.ImageUrl" class="card-img-top rounded-top" />
						<div class="card-body d-flex flex-column">
							<h5 class="card-title text-primary fw-bold">@product.Name</h5>
							<div class="mt-auto d-flex justify-content-between align-items-center">
							<span class="fw-semibold fs-5 text-success">$@product.Price.ToString("F2") BGN</span>
							<a href="@Url.Action("Details", "Product", new{ id = product.Id })">Details</a>
						</div>
						</div>
					</div>
				</div>
			}
		</div>
	</div>