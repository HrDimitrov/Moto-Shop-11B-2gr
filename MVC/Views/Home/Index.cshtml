@model IEnumerable<MVC.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<!-- 🚀 Hero Banner -->
<div class="hero-banner position-relative mb-5">
    <img src="/images/banner.jpg" class="w-100" style="height: 380px; object-fit: cover; border-radius: 12px;">

    <div class="position-absolute top-50 start-50 translate-middle text-center text-white">
        <h1 class="fw-bold display-4 text-shadow">MotoMech Store</h1>
        <p class="fs-5 mb-4 text-shadow">Quality parts • Great prices • Fast delivery</p>
        <a href="#products" class="btn btn-lg btn-primary px-4 py-2 fw-semibold">Shop Now</a>
    </div>
</div>


<!-- 📦 Product List -->
<div id="products" class="container my-5">
    <h1 class="text-center mb-4 fw-bold">Welcome to MotoMech Store!</h1>
    <p class="text-center mb-4">Discover our wide range of products and find the best deals.</p>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="@product.ImageUrl" class="card-img-top rounded-top" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@product.Name</h5>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-semibold fs-5 text-success">€ @product.Price.ToString("F2")</span>
                                <span class="text-primary">Details</span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
