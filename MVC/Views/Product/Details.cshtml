@model MVC.Models.Product;
@{
    ViewData["Title"] = $"{Model.Name} {Model.Name}";
}

<div class="container my-5">
    <div class="row g-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <img src="@Model.ImageUrl"
                     alt="@Model.Name"
                     class="img-fluid rounded"
                     style="object-fit: cover; max-height: 500px; width: 100%;">
            </div>
        </div>

        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h1 class="fw-bold text-primary mb-3">@Model.Name</h1>
            <p class="text-muted mb-4 fs-5">@Model.Description</p>

            <div class="d-flex align-items-center mb-4">
                <h3 class="text-success fw-semibold me-3">@Model.Price.ToString("N2") BGN</h3>
                <span class="badge bg-light text-dark border">available</span>
            </div>

            <div class="d-flex gap-3">
                <button class="btn btn-primary px-4 py-2">
					<i class="bi bi-cart-plus"></i> Add to Cart
                </button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary px-4 py-2">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>
