@model List<CartItem>

<div class="container my-5">
    <h1 class="text-center fw-bold mb-4">🛒 Вашата Количка</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Количката е празна. <a href="@Url.Action("Index", "Products")" class="alert-link">Вижте мотори</a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-bordered align-middle text-center mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Изображение</th>
                        <th>Модел</th>
                        <th>Цена</th>
                        <th>Количество</th>
                        <th>Общо</th>
                        <th>Действие</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                     class="img-fluid" style="height: 60px; object-fit: cover;">
                            </td>
                            <td> @item.Product.Name</td>
                            <td>@item.Product.Price.ToString("N2") лв.</td>
                            <td>
                                <form asp-action="Update" method="post" class="d-flex justify-content-center">
                                    <input type="hidden" name="ProductId" value="@item.Product.Id" />
                                    <input type="number" name="quantity" min="1" value="@item.Quantity"
                                           class="form-control form-control-sm text-center" style="width:70px;">
                                    <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Обнови</button>
                                </form>
                            </td>
                            <td>@item.TotalPrice.ToString("N2") лв.</td>
                            <td>
                                <form asp-action="Remove" method="post">
                                    <input type="hidden" name="ProductId" value="@item.Product.Id" />
                                    <button class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <div class="text-end">
                <h4 class="fw-bold">Общо: @Model.Sum(i => i.TotalPrice).ToString("N2") лв.</h4>
                <a href="@Url.Action("Checkout", "Cart")" class="btn btn-success btn-lg mt-2">
                    🏁 Плати сега
                </a>
            </div>
        </div>
    }
</div>
