@model MVC.Models.Order

@{
    ViewData["Title"] = "Order Success";
}

<div class="container my-5">
    <h1 class="text-center text-success mb-4">
        ✅ Thank you for your order!
    </h1>

    <div class="card p-4 mb-4 shadow-sm">
        <h4>Order #@Model.Id</h4>
        <p><strong>Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Status:</strong> @Model.Status</p>

        <h5 class="mt-3">Customer Info</h5>
        <p><strong>Name:</strong> @Model.CustomerName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>
        <p><strong>Address:</strong> @Model.Address</p>
    </div>

    <h4>Products in Order</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>€ @item.Price.ToString("F2")</td>
                    <td>€ @(item.Price* item.Quantity).ToString("F2")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Grand Total:</th>
                <th>€ @Model.TotalAmount.ToString("F2")</th>
            </tr>
        </tfoot>
    </table>


    <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Back to Shop</a>
    </div>
</div>
